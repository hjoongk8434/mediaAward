<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
    <definition name="baseTemplate" template="/WEB-INF/templates/baseTemplate.jsp">
        <put-attribute name="css" value="/WEB-INF/templates/tiles/head/css.jsp"/>
        <put-attribute name="scripts" value="/WEB-INF/templates/tiles/head/scripts.jsp"/>
        <put-attribute name="head" value="/WEB-INF/templates/tiles/head/head.jsp"/>
        <put-attribute name="foot" value="/WEB-INF/templates/tiles/foot/foot.jsp"/>
    </definition>

    <definition name="*" extends="baseTemplate">
        <put-attribute name="body" value="/WEB-INF/views/{1}.jsp"/>
    </definition>
    <definition name="*/*" extends="baseTemplate">
        <put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp"/>
    </definition>
</tiles-definitions>